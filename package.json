{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rm -rf lib && ncc build src/run.ts -o lib --source-map --no-source-map-register",
    "lint": "eslint .",
    "test": "tsc --sourceMap && ava"
  },
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@actions/github": "^6.0.1",
    "@octokit/core": "^7.0.6",
    "@octokit/plugin-request-log": "^6.0.0",
    "@octokit/plugin-rest-endpoint-methods": "^17.0.0"
  },
  "devDependencies": {
    "@ava/typescript": "^6.0.0",
    "@eslint/js": "^9.39.2",
    "@tsconfig/node20": "^20.1.6",
    "@types/node": "^24.10.1",
    "@vercel/ncc": "^0.38.4",
    "ava": "^6.4.1",
    "eslint": "^9.39.2",
    "typescript": "5.9.x",
    "typescript-eslint": "^8.50.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "ava": {
    "files": [
      "src/*test.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "lib/"
      },
      "compile": false
    }
  }
